<resources>
    <!-- 低栏RadioButton首页下面的标签的样式  -->
    <style name="BottomTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/__picker_black_40</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="btn_style">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="left_leb_style">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="right_leb_style">
        <item name="android:layout_marginLeft">15dp</item>
    </style>
</resources>
