<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo_03" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="刻章申请"
        android:textColor="@color/__picker_black_40"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/count_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/et_bg"
        android:hint="社会信用代码"
        android:paddingLeft="10dp"
        android:text="91440101321103449X"
        android:visibility="gone" />

    <EditText
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:text="623035"
        android:visibility="gone" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/scan_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:text="证照识别登录"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/scan_code_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:text="扫描执照二维码登录"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/__picker_black_40"
        android:background="@drawable/bg_tishi"
        android:textSize="12dp"
        android:text="小提示：请扫描营业执照上的二维码进行登录\n（注：只有新成立企业，工商共享后才能申请，一般是领营业执照次日后即可申请。）"/>

    <Button
        android:id="@+id/test_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:text="测试"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>
