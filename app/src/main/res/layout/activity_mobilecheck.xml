<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="第三步"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:text="信息确认，填写信息"
        android:textColor="@color/__picker_black_40"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手   机   号  码"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/mcjb_tel_et"
                    style="@style/right_leb_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验     证      码"
                    android:textColor="@color/__picker_black_40"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/mcjb_tel_code_et"
                    style="@style/right_leb_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />

                <Button
                    android:id="@+id/mcget_code_btn"
                    style="@style/btn_style"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="获取验证码"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="法人身份证照片"
                android:textColor="@color/__picker_black_40" />

            <ImageView
                android:id="@+id/ch_iv_farenz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/moren" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/mc_ll_1">

                <TextView
                    android:id="@+id/tv_mes1"
                    android:layout_width="0dp"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="上传失败"/>

                <ImageView
                    android:id="@+id/iv_state1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/dui" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/line_bg" />

            <LinearLayout
                android:id="@+id/mc_ll_jbr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="经办人身份证照片"
                    android:textColor="@color/__picker_black_40" />

                <ImageView
                    android:id="@+id/ch_iv_jbrz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/moren" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/mc_ll2">

                    <TextView
                        android:id="@+id/tv_mes2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_state2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/cuo" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/line_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/mc_tv_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="法人照片"
                android:textColor="@color/__picker_black_40" />

            <ImageView
                android:id="@+id/mc_iv_brz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@mipmap/moren" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/mc_ll3">

                <TextView
                    android:id="@+id/tv_mes3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_state3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/dui" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/mcclose_btn"
            style="@style/btn_style"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="上一步"
            android:textSize="12dp" />

        <Button
            android:id="@+id/mcnext_btn"
            style="@style/btn_style"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="下一步"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>