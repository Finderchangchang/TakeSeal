<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dw.take.seal.ui.ScanLoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <dw.take.seal.view.CameraSurfaceView
            android:id="@+id/main_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/camera" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="请将营业执照与四个角对齐" />

    <Button
        android:id="@+id/take_pic_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg_fang_blue"
        android:text="拍照"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/select_pic_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@drawable/bg_fang_blue"
        android:text="选择文件"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/take_pic_btn"
        android:layout_alignBottom="@+id/take_pic_btn"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
